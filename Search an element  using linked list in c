#include <stdio.h>
#include <stdlib.h>

// Structure of a node
struct Node {
    int data;
    struct Node* next;
};

int main() {
    struct Node *head = NULL, *newNode = NULL, *temp = NULL;
    int n, i, value, key, position = 1;
    int found = 0;

    printf("Enter number of nodes: ");
    scanf("%d", &n);

    // Creating the linked list
    for(i = 0; i < n; i++) {
        newNode = (struct Node*)malloc(sizeof(struct Node));

        printf("Enter data for node %d: ", i + 1);
        scanf("%d", &value);

        newNode->data = value;
        newNode->next = NULL;

        if(head == NULL) {
            head = newNode;
            temp = head;
        } else {
            temp->next = newNode;
            temp = newNode;
        }
    }

    // Searching element
    printf("Enter element to search: ");
    scanf("%d", &key);

    temp = head;

    while(temp != NULL) {
        if(temp->data == key) {
            printf("Element %d found at position %d\n", key, position);
            found = 1;
            break;
        }
        temp = temp->next;
        position++;
    }

    if(!found) {
        printf("Element %d not found in the linked list\n", key);
    }

    return 0;
}
