#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node* link;
};

struct node* insertEnd(struct node* head, int value) {
    struct node* newNode = (struct node*)malloc(sizeof(struct node));
    newNode->data = value;
    newNode->link = NULL;

    if (head == NULL) {
        return newNode;
    }

    struct node* temp = head;
    while (temp->link != NULL) {
        temp = temp->link;
    }
    temp->link = newNode;

    return head;
}

struct node* reverse(struct node* head) {
    struct node* prev = NULL;
    struct node* next = NULL;
    while (head != NULL) {
        next = head->link;
        head->link = prev;
        prev = head;
        head = next;
    }
    return prev;
}

int main() {
    struct node* head = NULL;
    struct node* ptr;
    char input[5];
    int ch,value;

    printf("Enter numbers for linked list (enter 'e' to stop):\n");

    while (1) {
        printf("Enter a number (or 'e' to end): ");
        scanf("%s", input);

        if (input[0] == 'e' || input[0] == 'E') {
            break;
        }

        int value = atoi(input);
        head = insertEnd(head, value);
    }

    printf("Linked List in Reverse Order:\n");

    head = reverse(head);
    ptr = head;
    while (ptr != NULL) {
        printf("%d------>", ptr->data);
        ptr = ptr->link;
    }
    printf("NULL\n");
}
